rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // FCM tokens collection - only allow read/write from Firebase Functions
    match /fcm_tokens/{token} {
      allow read, write: if false; // Only allow access from Firebase Functions
    }
    
    // Allow access to all other collections (if any)
    match /{document=**} {
      allow read, write: if false; // Default deny all
    }
  }
}
