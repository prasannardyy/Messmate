# Messmate Notification Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# VAPID KEYS (Required for Push Notifications)
# =============================================================================
# Generate VAPID keys at: https://web-push-codelab.glitch.me/
# Or use: npm install -g web-push && web-push generate-vapid-keys

# Your VAPID Public Key (starts with "B")
VITE_VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY_HERE

# Your VAPID Private Key (starts with a letter, keep this secret!)
VITE_VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY_HERE

# VAPID Subject (your email or website URL)
VITE_VAPID_SUBJECT=mailto:your-email@example.com

# VAPID Audience (your website URL)
VITE_VAPID_AUDIENCE=https://your-domain.com

# =============================================================================
# API ENDPOINTS (Required for Server Communication)
# =============================================================================
# Base URL for your API server
VITE_API_BASE_URL=https://your-api-domain.com

# API Authentication Token (if required)
VITE_API_TOKEN=YOUR_API_TOKEN_HERE

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to use mock API (for development)
# Set to false to use real API (for production)
VITE_USE_MOCK_API=true

# Set to true to skip VAPID (for development)
# Set to false to use VAPID (for production)
VITE_SKIP_VAPID=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Default notification preferences
VITE_DEFAULT_MEAL_REMINDERS=true
VITE_DEFAULT_MENU_UPDATES=true
VITE_DEFAULT_SPECIAL_MEALS=true
VITE_DEFAULT_TEST_NOTIFICATIONS=false

# Notification timing (in minutes before meal time)
VITE_BREAKFAST_REMINDER=30
VITE_LUNCH_REMINDER=30
VITE_DINNER_REMINDER=30
VITE_SNACKS_REMINDER=15
